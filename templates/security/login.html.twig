{% extends 'base.html.twig' %}

{% block title %}Přihlášení{% endblock %}

{% block stylesheets %}
<style>
.login{
    margin:0 auto;
}

#inputLogin, #inputPassword{
    width:410px;
}

</style>
{% endblock %}

{% block body %}
<div class="login form-group centered">
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">Přihlášení</h1>
        
        <label for="inputLogin">Login</label>
        <input type="text" value="{{ last_username }}" name="Login" id="inputLogin" class="form-control" maxlength="50" required autofocus>
        <label for="inputPassword">Heslo</label>
        <input type="password" name="password" id="inputPassword" maxlength="30" class="form-control" required>

        <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}" >

        <br>
        <button class="btn btn-lg btn-primary" type="submit">
            Přihlásit se
        </button> 
        <b style = "font-size: 20px;"> nebo se můžete </b>
        <a style="color:white; font-size: 20px;"  class="btn btn-secondary" href="{{ path('user_new') }}">
            Registrovat 
        </a>
        
    </form>
</div>
{% endblock %}
